      </tr>
    </table>
    
    <div class="main">
      <div class="ski_preview">
        <img id="imagePreview" data-attrs="src=row.8" class="zoomable-img" data-zoomable-zoom="3" data-zoomable-max="original"/>
      </div>
      <div class="caracteristics-wrp">
        <table class="caracteristics">
          <tr>	
            <td>
              <p><b>GAMME :</b> <span class="np" data-content="row.5"></span></p>
              <p><b>NIVEAU REQUIS :</b> <span class="np" data-content="row.12"></span></p>
              <p><b>TAILLE TESTÉE :</b> <span class="np" data-content="row.18"></span></p>
            </td>     
          </tr>
        </table>
      </div>
		  
      <div class="badges_placeholder">
        <!-- icon for men -->
        <img class="item-icon" data-init="if(not(eq(row.6,'1')),this.remove())" data-attrs="src=tmplrelpath('Homme.png')" />
        <!-- icon for women -->
        <img class="item-icon" data-init="if(not(eq(row.6,'2')),this.remove())" data-attrs="src=tmplrelpath('Femme.png')" />
        <!-- icon -->
        <img class="item-icon" data-init="if(not(eq(row.3,'1')),this.remove())" data-attrs="src=tmplrelpath('TesterChoice.png')" />
      </div>
      <div class="clearb"></div>
      <p class="Test_baseline" data-content="row.1"></p>
		  <p class="Description_Test" data-content="row.20"></p>
