<div class="row" id="setup-wrapper">
  <div class="col-lg-12">
    <div>
      <!-- hidden fields -->
      <input type="hidden" name="RootView" value="Magazines.plist?waupdate=30" />
      <input type="hidden" name="Active" value="True" />
      <input type="hidden" name="CodeService" value="Null" />
      <input type="hidden" name="UserService" value="LibrelioDB" />
    </div>
        <div class="box">
            <header>
                <h5 localize>General</h5>
            </header>
            <div id="collapse4" class="body">
            <form class="form-horizontal">
                 <div class="form-group">
                    <label for="longname" class="control-label col-lg-4" localize>Long name</label>

                     <div class="col-lg-3">
                        <input type="text" name="LongName" id="longname" placeholder="Long name" class="form-control" localize="_.attr('placeholder','longname_placeholder')">
                    </div>
		       	</div>
                 <div class="form-group">
                    <label for="shorname" class="control-label col-lg-4" localize>Short name (<14 chars)</label>

                     <div class="col-lg-3">
                        <input type="text" name="ShortName" id="shortname" placeholder="Short name" class="form-control" localize="_.attr('placeholder','shortname_placeholder')">
                    </div>
		       	</div>
                <div class="form-group">
                    <label for="description" class="control-label col-lg-4" localize>Description</label>

                    <div class="col-lg-8">
                        <textarea name="Description" id="description" class="autosize form-control"></textarea>
                    </div>
                </div> 
             </form>
            
            </div>
    	</div>
    </div>
  <div class="col-lg-12">
        <div class="box">
            <header>
                <h5 localize>Graphics</h5>
            </header>
            <div id="collapse4" class="body">
            	<form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-lg-4" localize>Logo</label>
                        <div class="col-lg-8">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
				<div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
				<div>
				  <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select image</span><span class="fileinput-exists fileinput-change" localize>Change</span><input type="file" name="logo"></span>
				  <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
				</div>
			      </div>

                        </div>
                    </div>
                     <div class="form-group">
                        <label for="cp1" class="control-label col-lg-4" localize>Background color</label>

                        <div class="col-lg-3">
                            <input type="text" class="form-control" value="#8fff00" id="cp1" name="BackgroundColor">
                        </div>
                    </div>
                    <!-- Background Image -->
                    <div class="form-group">
                      <label class="control-label col-lg-4" localize>Background Image</label>
                      <div class="col-lg-8">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
				          <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
				          <div>
				            <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select image</span><span class="fileinput-exists fileinput-change" localize>Change</span><input type="file" name="Magazines_background.png" accept="image/png"></span>
				            <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
				          </div>
			            </div>

                      </div>
                    </div> <!-- Background Image End -->
                 </form>
            
            </div>
        </div>
    </div>
  <div class="col-lg-12">
        <div class="box">
            <header>
                <h5 localize>Navigation</h5>
            </header>
            <div id="collapse4" class="body">
            <form class="form-horizontal">
                 <div class="form-group">
                    <label for="website" class="control-label col-lg-4" localize>Web site</label>

                     <div class="col-lg-6">
                        <input type="text" name="WebSite" id="website" placeholder="URL" class="form-control" localize="_.attr('placeholder','website_placeholder')">
                    </div>
		       	</div>
                 <div class="form-group">
                    <label for="facebook" class="control-label col-lg-4" localize>Facebook page</label>

                     <div class="col-lg-6">
                        <input type="text" name="Facebook" id="facebook" placeholder="URL" class="form-control"  localize="_.attr('placeholder','facebook_page_placeholder')">
                    </div>
		       	</div>
                 <div class="form-group">
                    <label for="rss" class="control-label col-lg-4" localize>RSS feed</label>

                     <div class="col-lg-6">
                        <input type="text" name="RSS" id="rss" placeholder="URL" class="form-control" localize="_.attr('placeholder','rss_placeholder')">
                    </div>
		       	</div>
             </form>
            
            </div>
    	</div>
    </div>
	 <div class="col-lg-12">
        <div class="box">
            <header>
                <h5 localize>Tracking</h5>
            </header>
            <div id="collapse4" class="body">
            <form class="form-horizontal">
                 <div class="form-group">
                    <label for="ga" class="control-label col-lg-4" localize>Google Analytics Code</label>

                     <div class="col-lg-3">
                        <input type="text" name="GACode" id="ga" placeholder="GA Code" class="form-control" localize="_.attr('placeholder','ga_code_placeholder')">
                    </div>
		       	</div>
             </form>
            
            </div>
    	</div>
    </div>

</div>
<!-- modal-->
    <div id="newApp" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" localize>Create new app</h4>
          </div>
          <div class="modal-body">
           <form class="form-horizontal" id="newapp-form">

                 <div class="form-group">
                    <label for="autosize" class="control-label col-lg-4" localize>Name of the app</label>

                     <div class="col-lg-8">
                        <input type="text" id="text1" placeholder="appname" class="form-control" localize="_.attr('placeholder','appname_placeholder')">
                    </div>
                </div> 
                  <div class="form-group">
                    <div class=" col-lg-4"></div>

                    <div class="col-lg-8">
                        <button class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label" localize>Create</span>
                        </button>
                    </div>
                </div> 
            </form>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal --><!-- /#helpModal -->
