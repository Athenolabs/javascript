---

<div class="row">
  <div class="col-lg-12">
        <div class="box">
            <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Publications </h5>
            </header>
            <div id="collapse4" class="body">
            	<p><a data-toggle="modal" data-original-title="New" data-placement="bottom" class="btn  btn-primary" href="#pubModal">New publication</a></p>
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped publicationDataTable">
					<thead>
					<tr>
						<th>Folder name</th>
						<th>Title</th>
						<th>Subtitle</th>
						<th class="text-center" style="width: 60px;">Status</th>
					</tr>
					</thead>
					<tbody>
					</tbody>                
				</table>
            </div>
        </div>
    </div>
</div>
<!-- modal-->
<div id="pubModal" class="modal fade new-pub-dlg">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <span class="pub-dlg-new">New publication</span>
          <span class="pub-dlg-update">Update publication</span>
        </h4>
      </div>
      <div class="modal-body">
        <form><!-- Pub Title -->
          <div class="form-group">
            <label class="control-label col-lg-2">FolderName</label>
            <div class="col-lg-8">
              <input type="text" name="FolderName" placeholder="Folder name" class="form-control">
            </div>
		  </div>
          <div class="form-group">
            <button class="btn btn-primary set-title-btn">
              <span>Set</span>
            </button>
          </div>
        </form>
      <div class="clearfix"></div>
        <div class="pub-body-form body">
          <form class="form-horizontal">
            <div class="form-group">
              <div class="col-sm-offset-1 radio">
                <label class="control-label col-lg-1">
                  <input type="radio" name="Type" value="Free">
                  Free
                </label>
              </div>
              <div class="col-sm-offset-1 radio">
                <label class="control-label col-lg-1">
                  <input type="radio" name="Type" value="Paid">
                  Paid
                </label>
              </div>
            </div>
            <div class="svg-files form-group btn-group pub-dlg-update">
              <button type="button" class="btn btn-default"
                      data-filename="*FolderName*.svg">Edit Free SVG</button>
              <button type="button" class="btn btn-default paid-elem"
                      data-filename="*FolderName*_.svg">Edit Paid SVG</button>
            </div>
            <!-- list of upload items -->
            <ul class="upload-list list-group">
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-2">Free version</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists fileinput-change">Change</span><input type="file" accept="application/pdf" name="*FolderName*.pdf"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput">Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item paid-elem">
                <div class="form-group">
                  <label class="control-label col-lg-2">Paid version</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists fileinput-change">Change</span><input type="file" accept="application/pdf" name="*FolderName*_.pdf"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput">Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-2">Medium res cover</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div class="fileinput-preview thumbnail" 
                           data-trigger="fileinput" 
                           style="width: 200px; height: 150px;"></div>
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists fileinput-change">Change</span><input data-type="Image" accept="image/png" type="file" name="*FolderName*_newsstand.png"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput">Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-2">Low res cover</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div class="fileinput-preview thumbnail" 
                           data-trigger="fileinput" 
                           style="width: 200px; height: 150px;"></div>
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists fileinput-change">Change</span><input data-type="Image" accept="image/png" type="file" name="*FolderName*.png"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput">Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
            </ul>
            <div id="asset-uploader" data-dir="">
              <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
            </div>
          </form>
        </div><!-- pub-body-form -->
      </div><!-- modal-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal --><!-- /#helpModal -->
