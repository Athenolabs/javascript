---
title: Publications
icon: fa fa-book
stylesheets:
- lib/inputlimiter/jquery.inputlimiter.1.0.css
- lib/chosen/chosen.min.css
- lib/colorpicker/css/colorpicker.css
- lib/datepicker/css/datepicker.css
- lib/jasny/css/jasny-bootstrap.min.css
- lib/datatables/css/demo_page.css
- lib/datatables/css/DT_bootstrap.css
- lib/plupload/jquery.plupload.queue/css/jquery.plupload.queue.css
- css/bootstrap-fileupload.min.css
- css/pages/publications.min.css
cdnjs:
- //ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js
javascripts:
- lib/inputlimiter/jquery.inputlimiter.1.3.1.min.js
- lib/chosen/chosen.jquery.min.js
- lib/colorpicker/js/bootstrap-colorpicker.js
- lib/datepicker/js/bootstrap-datepicker.js
- lib/jquery.dualListbox-1.3/jquery.dualListBox-1.3.min.js
- lib/jasny/js/jasny-bootstrap.min.js
- lib/plupload/plupload.full.min.js
- lib/plupload/jquery.plupload.queue/jquery.plupload.queue.min.js
- lib/plupload/plupload-localize.js
- lib/jquery-validation-1.11.1/dist/jquery.validate.min.js
- lib/jquery-validation-1.11.1/localization/messages_ja.js
- lib/datatables/jquery.dataTables.js
- lib/datatables/DT_bootstrap.js
- lib/datatables/dataTablesLocalize.js
- lib/jquery.plist.js
- lib/crypto/core-min.js
- lib/crypto/hmac-sha1.min.js
- lib/crypto/enc-base64-min.js
- js/pages/publications.min.js

scripts:
- $(function() { formGeneral(); });
---

<div class="row">
  <div class="col-lg-12">
        <div class="box">
            <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5 localize>Publications</h5>
            </header>
            <div id="collapse4" class="body">
            	<p><a data-toggle="modal" data-original-title="New" data-placement="bottom" class="btn btn-primary new-pub-btn" href="#pubModal" localize>New publication</a></p>

              <div id="page-loading-indicator2">
                <img src="{{ assets }}/img/loader-big-snake.gif" alt="Loading..." />
              </div>
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped publicationDataTable">
					<thead>
					<tr>
						<th localize>Folder name</th>
						<th localize>Title</th>
						<th localize>Subtitle</th>
						<th class="text-center" style="width: 90px;" localize>Status</th>
					</tr>
					</thead>
					<tbody>
					</tbody>                
				</table>
            </div>
        </div>
    </div>
</div>
<!-- modal-->
<div id="pubModal" class="modal fade new-pub-dlg">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn btn-success" style="float:right;" data-dismiss="modal" aria-hidden="true">Done</button>
        <h4 class="modal-title">
          <span class="pub-dlg-new" localize>New publication</span>
          <span class="pub-dlg-update" localize>Update publication</span>
        </h4>
      </div>
      <div class="modal-body">
        <form><!-- Pub Title -->
          <div class="form-group">
            <label class="control-label col-lg-2" localize>Folder name</label>
            <div class="col-lg-8">
              <input type="text" name="FolderName" placeholder="Folder name" class="form-control" localize="_.attr('placeholder','foldername_placeholder')">
              <p>
                <small><span localize>Allowed characters</span> 
                  <em>a-z 0-9 - _</em></small>
              </p>
            </div>
		  </div>
          <div class="form-group">
            <button class="btn btn-primary set-title-btn">
              <span localize>Set</span>
            </button>
          </div>
        </form>
      <div class="clearfix"></div>
        <div class="pub-body-form body">
          <form class="form-horizontal">
            <div class="form-group">
              <div class="col-sm-offset-1 radio">
                <label class="control-label col-lg-1">
                  <input type="radio" name="Type" value="Free">
                  <span localize>Free</span>
                </label>
              </div>
              <div class="col-sm-offset-1 radio">
                <label class="control-label col-lg-1">
                  <input type="radio" name="Type" value="Paid">
                  <span localize>Protected</span>
                </label>
              </div>
            </div>
            <!-- list of upload items -->
            <ul class="upload-list list-group">
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-2" localize>Free version</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select file</span><span class="fileinput-exists fileinput-change" localize>Change</span><input class="freefileupload" type="file" name="*FolderName**fileext*"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
                        <button type="button" class="btn btn-default svgedit-btn fileinput-is-svg"
                                data-filename="*FolderName*.svg" localize>Edit SVG</button>
                        <button type="button" class="btn btn-default pdfannotedit-btn fileinput-is-pdf"
                                data-filename="*FolderName*.pdf" localize>Edit Links</button>
                        <a href="" class="btn btn-default download-btn" localize>Download</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item paid-elem">
                <div class="form-group">
                  <label class="control-label col-lg-2" localize>Protected version</label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select file</span><span class="fileinput-exists fileinput-change" localize>Change</span><input class="paidfileupload" type="file" name="*FolderName*_*fileext*"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
                        <button type="button" class="btn btn-default svgedit-btn fileinput-is-svg"
                                data-filename="*FolderName*_.svg">Edit SVG</button>
                        <button type="button" class="btn btn-default pdfannotedit-btn fileinput-is-pdf"
                                data-filename="*FolderName*_.pdf" localize>Edit Links</button>
                        <a href="" class="btn btn-default download-btn" localize>Download</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-4"><span localize>Medium res cover</span> - 1024 <span localize>px height</span></label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div class="fileinput-preview thumbnail" 
                           data-trigger="fileinput" 
                           style="width: 200px; height: 150px;"></div>
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select image</span><span class="fileinput-exists fileinput-change" localize>Change</span><input data-type="Image" accept="image/png" type="file" name="*FolderName*_newsstand.png" data-required-image-height="1024" data-required-image-message-localize="Image height should be 1024 pixels"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="form-group">
                  <label class="control-label col-lg-4"><span localize>Low res cover</span> - 300 <span localize>px height</span></label>
                  <div class="col-lg-8">
                    <div class="fileinput fileinput-new" 
                         data-provides="fileinput">
				      <div class="fileinput-preview thumbnail" 
                           data-trigger="fileinput" 
                           style="width: 200px; height: 150px;"></div>
				      <div>
				        <span class="btn btn-default btn-file"><span class="fileinput-new" localize>Select image</span><span class="fileinput-exists fileinput-change" localize>Change</span><input data-type="Image" accept="image/png" type="file" name="*FolderName*.png" data-required-image-height="300" data-required-image-message-localize="Image height should be 300 pixels"></span>
				        <a href="#" class="btn btn-default fileinput-exists fileinput-remove" data-dismiss="fileinput" localize>Remove</a>
				      </div>
			        </div>
                  </div>
                </div>
              </li>
            </ul>
            <div id="asset-uploader" data-dir="">
              <p localize>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
            </div>
          </form>
        </div><!-- pub-body-form -->
      </div><!-- modal-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal --><!-- /#helpModal -->
