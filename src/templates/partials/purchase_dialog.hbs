<!-- Purchase dialog -->
<div id="purchase-dialog" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h5>
          <span class="code-service" localize>Enter your code</span>
          <span class="user-service" localize>Enter your user ID and password</span>
        </h5>
      </div>
      <div class="modal-body">
        <form class="code-service form-horizontal" role="form">
          <div class="form-group">
            <label for="purchase-dlg-code-inp" 
                   class="col-sm-2 control-label" localize>Code</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="purchase-dlg-code-inp"
                     placeholder="Code" localize="_.attr('placeholder','code_placeholder')" />
            </div>
          </div>
        </form>
        <form class="user-service form-horizontal" role="form">
          <div class="form-group">
            <label for="purchase-dlg-user-inp"
                   class="col-sm-2 control-label" localize>Username</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="purchase-dlg-user-inp"
                     placeholder="Username" localize="_.attr('placeholder','username_placeholder')" />
            </div>
          </div>
          <div class="form-group">
            <label for="purchase-dlg-pass-inp"
                   class="col-sm-2 control-label" localize>Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" 
                     id="purchase-dlg-pass-inp" placeholder="Password" localize="_.attr('placeholder','password_placeholder')" />
            </div>
          </div>
        </form>
        <div class="login-result">
          <div class="login-failed" localize>Login request failed: %s</div>
        </div>
        <div class="result">
          <div class="login-result">
            <div class="login-success" localize>Logged in successfully!</div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="purchase-dlg-submit" type="submit" 
                class="btn btn-primary" localize>Submit</button>
        <button id="purchase-dlg-cancel" 
                class="btn btn-default">
          <span class="result" localize>Close</span>
          <span class="user-service code-service" localize>Cancel</span>
        </button>
      </div>
    </div>
  </div>
</div>
<!-- Purchase dialog end -->
